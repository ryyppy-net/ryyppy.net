<?xml version="1.0" encoding="UTF-8" ?>
<persistence
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

    <persistence-unit name="transactions-optional">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>drinkcounter.model.AbstractEntity</class>
        <class>drinkcounter.model.Party</class>
        <class>drinkcounter.model.Participant</class>
        <class>drinkcounter.model.Party</class>
        <class>drinkcounter.model.ParticipantHistory</class>
        <class>drinkcounter.model.PartyHistory</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="false" />
        </properties>
    </persistence-unit>

</persistence>